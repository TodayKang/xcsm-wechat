/* pages/my-address-add/index.wxss */

.address-detail {
  width: 100%;
  height: 100%;
}

.address-detail .detail-box {
  width: 100%;
  min-height: 88rpx;
  display: flex;
  border-bottom: 1rpx solid #f4f4f4;
}

.detail-box .box-left {
  width: 20%;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.detail-box .box-right {
  width: 75%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.detail-box .gender {
  display: flex;
  flex-direction: row;
}

.gender .male, .gender .male-text, .gender .female, .gender .female-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.gender .no-select {
  color: #ccc;
}

.gender .select {
  color: #09bb07;
}

.gender .male-text, .gender .female-text {
  margin-left: 4rpx;
}

.detail-box .error {
  color: #e64340;
}

.box-right textarea {
  width: 90%;
}

.address-action {
  padding: 100rpx 30rpx 0 30rpx;
}

.address-action button {
  width: 100%;
}

button[type='warn'] {
  color: #fff;
  background-color: #e64340;
  margin: 0 0 20rpx 0;
}

button[type="default"] {
  color: #000;
  background-color: #fff;
}
