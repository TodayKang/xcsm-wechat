/* pages/order-fill/index.wxss */
@import "/template/template-abnor/template-abnor.wxss";
@import "/template/template-list-item/template-list-item.wxss";

.sticky-bg {
    width: 100%;
    padding: 20rpx 0;
    background-color: #ececec;
}

.box-address {
    min-height: 100rpx;
    margin: 0 20rpx;
    border-radius: 20rpx;
}

.box-address .address, .box-address .date {
    margin: 0 10rpx;
    padding: 20rpx 0;
    display: flex;
}

.box-address .address {
    border-bottom: 1rpx solid #d6d6d6;
}

.box-address .null {
    width: 100%;
    text-align: center;
}

.box-address .icon {
    width: 18%;
    text-align: center;
}

.box-address .detail {
    width: 74%;
}

.box-address .more {
    width: 8%;
    color: #ccc;
}

.box-address .detail .full {
    font-size: 32rpx;
    font-weight: bold;
}

.box-address .detail .name {
    font-size: 26rpx;
}

.box-address .detail .phone {
    padding-left: 10rpx;
}

.box-address .title {
    width: 52%;
    font-weight: bold;
    padding-left: 20rpx;
}

.box-address .value {
    width: 40%;
    font-weight: bold;
    text-align: center;
}

.order-bottom {
    width: 100%;
    height: 100rpx;
    z-index: 9999;
    font-weight: bold;
}

.order-bottom  .bottom-price {
    width: 65%;
    height: 100%;
    line-height: 100rpx;
    padding-right: 20rpx;
    text-align: right;
    font-size: 26rpx;
    color: #474747;
}

.order-bottom  .submit {
    width: 35%;
    height: 100%;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    background-color: #e64340;
}

.order-bottom  .submit-no {
    background-color: #ccc !important;
}

.bottom-price .quantity {
    font-size: 24rpx;
    padding-right: 10rpx;
    color: #666;
}

.bottom-price .price {
    font-size: 36rpx;
    color: #e64340;
}
