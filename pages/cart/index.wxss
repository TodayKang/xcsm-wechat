/* pages/cart/index.wxss */
@import "/template/template-abnor/template-abnor.wxss";
@import "/template/template-list-item/template-list-item.wxss";

.cart-top {
    width: 100%;
    height: 88rpx;
    display: flex;
    font-size: 28rpx;
    color: #666;
}

.cart-top .label {
    width: 75%;
    height: 100%;
    padding-left: 30rpx;
}

.cart-top .edit {
    width: 25%;
    height: 100%;
    text-align: center;
}

.cart-bottom {
    width: 100%;
    height: 100rpx;
    z-index: 999;
}

.cart-bottom .select {
    width: 25%;
    display: flex;
}

.cart-bottom .price {
    width: 45%;
    height: 100%;
    padding-right: 15rpx;
    text-align: right;
}

.cart-bottom .pay {
    width: 30%;
    height: 100%;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    background-color: #e64340;
}

.cart-bottom .select .icon {
    height: 100%;
    padding-left: 30rpx;
}

.cart-bottom .select .text {
    height: 100%;
    font-size: 28rpx;
    padding-left: 8rpx;
    text-align: left;
}

.cart-bottom .pay.select-none {
    background-color: #ccc;
}
