/* pages/my-address/index.wxss */
@import "/template/template-abnor/template-abnor.wxss";

.scroll-address {
  width: 100%;
  margin-bottom: 120rpx;
}

.scroll-address .address {
  width: 100%;
  min-height: 88rpx;
  border-bottom: 2rpx solid #f4f4f4;
  background: #fcfcfc;
  color: #333;
  display: flex;
  overflow: hidden;
}

.address .select {
  width: 10%;
  color: #999;
  text-align: center;
}

.address .detail {
  width: 90%;
  padding: 10rpx 0 10rpx 10rpx;
  font-weight: bold;
}

.address .detail .name {
  width: 100%;
  font-size: 28rpx;
}

.address .detail .phone {
  font-size: 26rpx;
  padding-left: 12rpx;
}

.address .action {
  width: 100%;
  display: flex;
}

.action .full {
  width: 76%;
  font-size: 24rpx;
}

.action .edit, .action .delete {
  width: 12%;
  text-align: center;
  color: #999;
}

.address-bottom {
  width: 100%;
  height: 100rpx;
  background: #e64340;
  color: #fff;
  font-weight: bold;
  text-align: center;
  z-index: 9999;
}
